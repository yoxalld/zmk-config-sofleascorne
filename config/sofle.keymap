#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

/ {
    behaviors {
        hm: hm {
            compatible = "zmk,behavior-hold-tap";
            label = "HM";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <200>;
            flavor = "balanced";
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            // ------------------------------------------------------------------------------------------------------------
            // |  `    |  1  |  2   |  3   |  4  |  5    |                         |  6    |  7  |  8   |  9   |   0   |   PLAP/PAUSE    |
            // |  ESC  |  Q  |  W   |  E   |  R  |  T    |                         |  Y    |  U  |  I   |  O   |   P   | BKSPC           |
            // |  TAB  |  A  |  S   |  D   |  F  |  G    |                         |  H    |  J  |  K   |  L   |   ;   |   '             |
            // | SHIFT |  Z  |  X   |  C   |  V  |  B    |  MUTE  |        | ExtPw |  N    |  M  |  ,   |  .   |   /   | SHIFT           |
            //               | CTRL | ALT  | GUI | SPACE |  LOWER |        | RAISE | ENTER | GUI | ALT  | CTRL |

            bindings = <
&none           &none        &none           &none           &none             &none                  &none  &none             &none            &none           &none           &none
&kp ESC         &kp Q        &kp W           &kp E           &kp R             &kp T                  &kp Y  &kp U             &kp I            &kp O           &kp P           &kp BSPC
&kp TAB         &hm LCTRL A  &hm LEFT_ALT S  &hm LEFT_GUI D  &hm LEFT_SHIFT F  &kp G                  &kp H  &hm LEFT_SHIFT J  &hm RIGHT_GUI K  &hm LEFT_ALT L  &hm LCTRL SEMI  &kp SQT
&kp LEFT_SHIFT  &kp Z        &kp X           &kp C           &kp V             &kp B  &none    &none  &kp N  &kp M             &kp COMMA        &kp DOT         &kp FSLH        &kp MINUS
                             &none           &kp LEFT_GUI    &kp ENTER         &mo 1  &none    &none  &mo 2  &kp SPACE         &kp RIGHT_GUI    &none
            >;
        };

        num_symbol_layer {
            // TODO: Some binds are waiting for shifted keycode support.
            // ------------------------------------------------------------------------------------------------------------
            // |       |  F1 |  F2 |  F3  |  F4  |  F5  |                   |  F6  |  F7   |  F8   |  F9  |  F10  |  F11  |
            // | `     |   1 |   2 |   3  |   4  |   5  |                   |   6  |   7   |   8   |   9  |    0  |  F12  |
            // |       |  !  |  @  |  #   |  $   |  %   |                   |  ^   |  &    |  *    |  (   |   )   |   |   |
            // |       |  =  |  -  |  +   |  {   |  }   |        |  |       |  [   |  ]    |  ;    |  :   |   \   |       |
            //               |     |      |      |      |        |  |       |      |       |       |      |

            bindings = <
&none      &none         &none         &none         &none         &none                     &none      &none             &none              &none                 &none                  &none
&kp GRAVE  &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &kp NUMBER_4  &kp N5                    &kp PLUS   &kp LESS_THAN     &kp GREATER_THAN   &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp POUND
&kp TILDE  &trans        &trans        &trans        &trans        &trans                    &kp EQUAL  &kp LEFT_BRACKET  &kp RIGHT_BRACKET  &kp AMPERSAND         &kp PIPE               &kp PERCENT
&trans     &kp NUMBER_6  &kp N7        &kp N8        &kp N9        &kp N0  &none     &none   &kp MINUS  &kp LEFT_BRACE    &kp RIGHT_BRACE    &kp DOLLAR            &kp BACKSLASH          &kp EXCL
                         &trans        &trans        &trans        &trans  &trans    &trans  &trans     &trans            &trans             &trans
            >;
        };

        nav_layer {
            // ------------------------------------------------------------------------------------------------------------
            // |BTCLR| BT1  | BT2  |  BT3  |  BT4  |  BT5 |                |      |      |       |      |       |       |
            // |     | INS  | PSCR | GUI   |       |      |                | PGUP |      |   ^   |      |       |       |
            // |     | ALT  | CTRL | SHIFT |       | CAPS |                | PGDN |   <- |   v   |  ->  |  DEL  | BKSPC |
            // |     | UNDO | CUT  | COPY  | PASTE |      |      |  |      |      |      |       |      |       |       |
            //              |      |       |       |      |      |  |      |      |      |       |      |

            bindings = <
&none   &none   &none   &none   &none   &none                     &trans  &trans         &trans    &trans     &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans                    &trans  &kp PAGE_DOWN  &kp UP    &kp PG_UP  &trans  &kp DELETE
&trans  &trans  &trans  &trans  &trans  &trans                    &trans  &kp LEFT       &kp DOWN  &kp RIGHT  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans         &trans    &trans     &trans  &trans
                &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans         &trans    &trans
            >;
        };

        utility_layer {
            bindings = <
&trans      &trans  &trans  &trans  &trans  &trans                    &trans          &trans            &trans      &trans  &trans  &trans
&bt BT_CLR  &trans  &trans  &trans  &trans  &trans                    &kp C_PREVIOUS  &kp C_PLAY_PAUSE  &kp C_NEXT  &trans  &trans  &kp C_VOLUME_UP
&bt BT_NXT  &trans  &trans  &trans  &trans  &trans                    &trans          &trans            &trans      &trans  &trans  &kp C_VOLUME_DOWN
&bt BT_PRV  &trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans          &trans            &trans      &trans  &trans  &kp C_MUTE
                    &trans  &trans  &trans  &trans  &trans    &trans  &trans          &trans            &trans      &trans
            >;
        };
    };

    conditional_layers {
        compatible = "zmk,conditional-layers";

        Utilities {
            if-layers = <1 2>;
            then-layer = <3>;
        };
    };
};
